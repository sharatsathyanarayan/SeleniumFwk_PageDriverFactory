package frameworktwo.action.classes;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;

import frameworktwo.base.classes.PageDriver;

public class LoginAction {
	
	WebDriver driver;
	
	public LoginAction() {
		
		driver = PageDriver.getDriver();
	}
	
	public void login(String usrname, String pwd) {
		
		WebElement username =  driver.findElement(By.id("user-name")).sendKeys("standard_user");
		driver.findElement(By.id("password")).sendKeys("secret_sauce");
		driver.findElement(By.id("login-button")).click();
		
	}

}
